{
  "name": "tanstack-dashboard-backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "bun --env-file=.env.development --watch src/index.ts",
    "dev:test": "bun --env-file=.env.test --watch src/index.ts",
    "start": "bun src/index.ts",
    "type-check": "tsc --noEmit",
    "db:schema": "echo 'See sql/schema.sql for initial schema'",
    "db:generate": "drizzle-kit generate",
    "db:push": "bun --env-file=.env.development drizzle-kit push",
    "db:push:prod": "bun --env-file=.env.production drizzle-kit push",
    "db:migrate": "bun --env-file=.env.development drizzle-kit migrate",
    "db:migrate:prod": "bun --env-file=.env.production drizzle-kit migrate",
    "db:seed": "bun --env-file=.env.development src/scripts/seed.ts",
    "db:seed:prod": "bun --env-file=.env.production src/scripts/seed.ts",
    "db:studio": "bun --env-file=.env.development drizzle-kit studio",
    "test": "bun --env-file=.env.development vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@epic-web/remember": "^1.1.0",
    "@types/cookie-parser": "^1.4.10",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.45.0",
    "drizzle-zod": "^0.8.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "i18n-iso-countries": "^7.14.0",
    "jose": "^6.1.3",
    "morgan": "^1.10.1",
    "nodemailer": "^8.0.1",
    "pg": "^8.16.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.10.2",
    "@types/nodemailer": "^7.0.9",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "drizzle-kit": "^0.31.8",
    "supertest": "^7.1.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
